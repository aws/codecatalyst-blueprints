{
  "name": "@caws-blueprint-util/blueprint-cli",
  "description": "This is a cli utility used for blueprint development.",
  "bin": {
    "blueprint": "lib/index.js"
  },
  "scripts": {
    "build": "npx projen build",
    "bump": "npx projen bump",
    "clobber": "npx projen clobber",
    "compile": "npx projen compile",
    "default": "npx projen default",
    "eject": "npx projen eject",
    "eslint": "npx projen eslint",
    "package": "npx projen package",
    "post-compile": "npx projen post-compile",
    "post-upgrade": "npx projen post-upgrade",
    "pre-compile": "npx projen pre-compile",
    "test": "npx projen test",
    "test:watch": "npx projen test:watch",
    "unbump": "npx projen unbump",
    "upgrade": "npx projen upgrade",
    "watch": "npx projen watch",
    "projen": "npx projen --no-post",
    "npm:publish": "yarn bump && yarn build && yarn package && yarn npm:push",
    "npm:push": "yarn npm publish"
  },
  "devDependencies": {
    "@caws-blueprint-util/projen-blueprint-component": "0.2.x",
    "@types/jest": "26.0.24",
    "@types/jmespath": "*",
    "@types/node": "^18",
    "@types/pino": "^6.3.12",
    "@types/yargs": "17.0.8",
    "@typescript-eslint/eslint-plugin": "^5",
    "@typescript-eslint/parser": "^5",
    "eslint": "^8",
    "eslint-import-resolver-node": "*",
    "eslint-import-resolver-typescript": "*",
    "eslint-plugin-import": "*",
    "jest": "27.0.x",
    "jest-junit": "^15",
    "npm-check-updates": "^16",
    "pino-pretty": "^4.8.0",
    "projen": "0.71.112",
    "standard-version": "^9",
    "ts-jest": "*",
    "ts-loader": "^9.4.1",
    "ts-node": "^10",
    "typescript": "^4.x"
  },
  "dependencies": {
    "@aws-sdk/client-cloudfront": "*",
    "@aws-sdk/client-s3": "*",
    "@aws-sdk/client-sts": "*",
    "axios": "^0.25.0",
    "deepmerge": "^4.3.1",
    "jmespath": "^0.15.0",
    "pino": "^6.13.4",
    "pino-pretty": "^4.8.0",
    "projen": "0.71.112",
    "ts-node": "^10.5.0",
    "typescript": "*",
    "yargs": "^17.3.1"
  },
  "main": "lib/index.js",
  "license": "Apache-2.0",
  "version": "0.2.8",
  "jest": {
    "testMatch": [
      "<rootDir>/src/**/__tests__/**/*.ts?(x)",
      "<rootDir>/(test|src)/**/*(*.)@(spec|test).ts?(x)"
    ],
    "clearMocks": true,
    "collectCoverage": true,
    "coverageReporters": [
      "json",
      "lcov",
      "clover",
      "cobertura",
      "text"
    ],
    "coverageDirectory": "coverage",
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/"
    ],
    "watchPathIgnorePatterns": [
      "/node_modules/"
    ],
    "reporters": [
      "default",
      [
        "jest-junit",
        {
          "outputDirectory": "test-reports"
        }
      ]
    ],
    "preset": "ts-jest",
    "globals": {
      "ts-jest": {
        "tsconfig": "tsconfig.dev.json"
      }
    }
  },
  "types": "lib/index.d.ts",
  "preferGlobal": true,
  "//": "~~ Generated by projen. To modify, edit .projenrc.ts and run \"npx projen\"."
}
