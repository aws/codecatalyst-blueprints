{
  "name": "@amazon-codecatalyst/blueprint-util.cli",
  "description": "This is a cli utility used for blueprint development.",
  "bin": {
    "blueprint": "lib/index.js"
  },
  "scripts": {
    "build": "yarn make-assessment-schemas && npx projen build",
    "bump": "npx projen bump",
    "clobber": "npx projen clobber",
    "compile": "npx projen compile",
    "default": "npx projen default",
    "eject": "npx projen eject",
    "eslint": "npx projen eslint",
    "make-assessment-schemas": "npx projen make-assessment-schemas",
    "package": "npx projen package",
    "post-compile": "npx projen post-compile",
    "post-upgrade": "npx projen post-upgrade",
    "pre-compile": "npx projen pre-compile",
    "test": "npx projen test",
    "test:watch": "npx projen test:watch",
    "unbump": "npx projen unbump",
    "upgrade": "npx projen upgrade",
    "watch": "npx projen watch",
    "projen": "npx projen --no-post",
    "component:package": "yarn build && yarn package",
    "npm:push": "yarn bump && yarn component:package && yarn npm:publish",
    "npm:publish": "npm publish dist/js/*.tgz"
  },
  "devDependencies": {
    "@amazon-codecatalyst/blueprint-util.projen-blueprint-component": "*",
    "@types/jest": "26.0.24",
    "@types/jmespath": "^0.15.0",
    "@types/node": "^18",
    "@types/pino": "^6.3.12",
    "@types/yargs": "17.0.8",
    "@typescript-eslint/eslint-plugin": "^5",
    "@typescript-eslint/parser": "^5",
    "eslint": "^8",
    "eslint-import-resolver-node": "^0.3.7",
    "eslint-import-resolver-typescript": "^3.5.5",
    "eslint-plugin-import": "^2.27.5",
    "jest": "27.0.x",
    "jest-junit": "^15",
    "npm-check-updates": "^16",
    "pino-pretty": "^4.8.0",
    "projen": "0.71.112",
    "standard-version": "^9",
    "ts-jest": "^29.1.0",
    "ts-json-schema-generator": "^1.2.0",
    "ts-loader": "^9.4.1",
    "ts-node": "^10",
    "typescript": "^4.x"
  },
  "dependencies": {
    "@apollo/client": "3.8.1",
    "@aws-sdk/client-cloudfront": "^3.360.0",
    "@aws-sdk/client-codecatalyst": "3.414.0",
    "@aws-sdk/client-s3": "^3.360.0",
    "@aws-sdk/client-sts": "^3.360.0",
    "ajv": "^8.12.0",
    "axios": "^0.25.0",
    "axios-retry": "^4.1.0",
    "cross-fetch": "^3.1.5",
    "deepmerge": "^4.3.1",
    "esbuild": "0.19.3",
    "graphql": "^16.8.0",
    "jmespath": "^0.15.0",
    "pino": "^6.13.4",
    "pino-pretty": "^4.8.0",
    "projen": "0.71.112",
    "tar": "^6.1.13",
    "ts-node": "^10.5.0",
    "typescript": "^4.9.5",
    "yaml": "*",
    "yargs": "^17.3.1"
  },
  "main": "lib/index.js",
  "license": "Apache-2.0",
  "version": "0.3.127",
  "jest": {
    "testMatch": [
      "<rootDir>/src/**/__tests__/**/*.ts?(x)",
      "<rootDir>/(test|src)/**/*(*.)@(spec|test).ts?(x)"
    ],
    "clearMocks": true,
    "collectCoverage": true,
    "coverageReporters": [
      "json",
      "lcov",
      "clover",
      "cobertura",
      "text"
    ],
    "coverageDirectory": "coverage",
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/"
    ],
    "watchPathIgnorePatterns": [
      "/node_modules/"
    ],
    "reporters": [
      "default",
      [
        "jest-junit",
        {
          "outputDirectory": "test-reports"
        }
      ]
    ],
    "preset": "ts-jest",
    "globals": {
      "ts-jest": {
        "tsconfig": "tsconfig.dev.json"
      }
    }
  },
  "types": "lib/index.d.ts",
  "preferGlobal": true,
  "//": "~~ Generated by projen. To modify, edit .projenrc.ts and run \"npx projen\"."
}
