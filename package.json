{
  "type": "module",
  "private": true,
  "scripts": {
    "build": "PROJEN_DISABLE_POST=1 yarn workspaces foreach --topological-dev -v run build",
    "projen": "PROJEN_DISABLE_POST=1 yarn workspaces foreach -v -t run projen",
    "eslint": "PROJEN_DISABLE_POST=1 yarn workspaces foreach -v run eslint",
    "upgrade": "PROJEN_DISABLE_POST=1 yarn workspaces foreach run upgrade",
    "components:publish": "yarn workspaces foreach -v --include './packages/components/*', run npm:publish",
    "utils:publish": "yarn workspaces foreach -v --include './packages/utils/*' run npm:publish",
    "blueprints:publish": "yarn workspaces foreach -v --include './packages/blueprints/*' run blueprint:publish",
    "blueprints:synth": "yarn workspaces foreach -v --include './packages/blueprints/*' run blueprint:synth"
  },
  "packageManager": "yarn@3.1.0",
  "workspaces": {
    "packages": [
      "packages/**/*"
    ]
  },
  "devDependencies": {
    "@types/node": "^16.11.7",
    "eslint": "^7.2.0",
    "eslint-config-airbnb": "18.2.1",
    "eslint-config-node": "^4.1.0",
    "eslint-config-prettier": "^8.2.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-react": "^7.21.5",
    "eslint-plugin-react-hooks": "^1.7.0",
    "husky": "^4.3.8",
    "ts-loader": "^8.0.5",
    "ts-node-dev": "^1.0.0",
    "typescript": "^4.0.3",
    "webpack": "^5.62.1",
    "yargs": "^16.2.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn build"
    }
  },
  "dependencies": {
    "@typescript-eslint/eslint-plugin": "^5.3.1",
    "@typescript-eslint/parser": "^5.3.1",
    "webpack-cli": "^4.9.1"
  }
}
